<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/cream"
    tools:context="com.codingblocks.hangmangame.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:alpha="0.77"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="CATEGORY"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Category"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/hangmanContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center">

                <ImageView
                    android:id="@+id/gallows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/android_hangman_gallows" />

                <ImageView
                    android:id="@+id/bodyPart1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="94dp"
                    android:paddingTop="18dp"
                    android:src="@drawable/android_hangman_head" />

                <ImageView
                    android:id="@+id/bodyPart2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="88dp"
                    android:paddingTop="48dp"
                    android:src="@drawable/android_hangman_arm1" />

                <ImageView
                    android:id="@+id/bodyPart3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="108dp"
                    android:paddingTop="48dp"
                    android:src="@drawable/android_hangman_body" />

                <ImageView
                    android:id="@+id/bodyPart4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="108dp"
                    android:paddingTop="48dp"
                    android:src="@drawable/android_hangman_arm2" />

                <ImageView
                    android:id="@+id/bodyPart5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="90dp"
                    android:paddingTop="86dp"
                    android:src="@drawable/android_hangman_leg1" />

                <ImageView
                    android:id="@+id/bodyPart6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="108dp"
                    android:paddingTop="86dp"
                    android:src="@drawable/android_hangman_leg2" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.55"
            android:orientation="vertical"
            android:id="@+id/keyboard">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/wordContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>


</LinearLayout>
